@{
}

@model IEnumerable<string>

@* adds the buttons to filter by category *@
<div class="d-grip gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCat="" asp-route-pageNum="1"
       class="btn btn-outline-secondary">Home</a>

    
    @* will ensure that the only the filter you are currently using is highlighted *@
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCat="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>